%h4 Welcome #{@user.username}
#last_tool

%ul#tools_chest
  - if @user.tools.empty?
    %h5 You need some tools!
  - else
    %h5#most_recent 
      most recent tool: #{@user.tools.last.name}
    - @user.tools.each do |tool|
      %li
        = link_to tool.name, tool_path(tool)
        \: $#{tool.price}


= link_to 'Create tool', new_tool_path
